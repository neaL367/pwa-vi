generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String?
  endpoint  String   @unique
  p256dh    String
  auth      String

  @@map("pushsubscription")
}
